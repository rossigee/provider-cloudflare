run:
  deadline: 2m

linters:
  enable:
    - errcheck
    - gosimple
    - govet
    - ineffassign
    - staticcheck
    - typecheck
    - unused
    - goimports
    - goconst
    - gocyclo
    - misspell
    - nakedret
    - unconvert
    - prealloc

linters-settings:
  gocyclo:
    min-complexity: 15
  goconst:
    min-len: 2
    min-occurrences: 2
  goimports:
    local-prefixes: github.com/rossigee/provider-cloudflare

issues:
  exclude-rules:
    - path: zz_generated\.deepcopy\.go
      linters:
        - goimports
    - path: zz_generated\.managed\.go
      linters:
        - goimports
    - path: zz_generated\.managedlist\.go
      linters:
        - goimports
    - path: _test\.go
      linters:
        - goconst
        - prealloc
        - gocyclo